<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<div class="users-container">
  <div class="users-header">
    <h1>Users</h1>
    <p>Every user registered for this website:</p>
  </div>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %> 
  
  <table class="mytable">
    <thead>
      <tr>
        <th>User id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Edit', edit_user_path(user.id), class: "btn-edit" %></td>
          <td><%= button_to 'Delete', user_path(user.id), method: :delete, class: "btn-delete" %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5">End of User List</td>
      </tr>
    </tfoot>
  </table>
  
  <div class="users-actions">
    <%= link_to "Create new user", new_user_path, class: "btn-new-user" %>
  </div>
</div>

