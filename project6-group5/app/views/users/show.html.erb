<% provide(:title, 'User Information') %>

<div class="user-container">
  <div class="user-header">
    <h1>User Information</h1>
    <p style="color: green"><%= notice %></p>
  </div>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  
  <%= render @user %>

  <div class="action-card">
    <h3>User Actions</h3>
    <div class="action-buttons">
      <%= link_to "Edit User", edit_user_path(@user), class: "btn-edit" %>
      <%= button_to "Delete User", @user, method: :delete, class: "btn-delete", 
            data: { confirm: "Are you sure you want to delete this user?" } %>
    </div>
  </div>

  <div class="navigation-links">
    <%= link_to "Back to Users", users_path, class: "btn-back" %>
    <%= link_to "Create New User", new_user_path, class: "btn-new-user" %>
  </div>
</div>