<!-- app/views/expenses/_form.html.erb -->
<%= form_with(model: [@trip, @expense], local: true) do |form| %>
  <div class="field mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01, class: "form-control", required: true %>
  </div>

  <div class="field mb-3">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :currency %>
    <%= form.text_field :currency, class: "form-control", placeholder: "e.g., USD, EUR" %>
  </div>

  <div class="field mb-3">
    <%= form.label :payer_id %>
    <%= form.collection_select :payer_id, User.all, :id, :name, 
        { prompt: "Select a payer" }, class: "form-select", required: true %>
  </div>

  <div class="field mb-3">
    <%= form.label :participant_ids, "Participants" %>
    <%= form.collection_select :participant_ids, @participants, :id, :name, 
        { prompt: "Select participants" }, class: "form-select", multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit "Create Expense", class: "btn btn-primary" %>
  </div>
<% end %>