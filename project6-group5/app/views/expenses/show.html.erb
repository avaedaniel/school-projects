<p style="color: green"><%= notice %></p>

<h1>Expense: <%= @expense.description %></h1>

<p><strong>Amount:</strong> <%= number_to_currency(@expense.amount) %></p>
<p><strong>Date:</strong> <%= @expense.date %></p>
<p><strong>Currency:</strong> <%= @expense.currency || "N/A" %></p>
<p><strong>Payer:</strong> <%= @expense.payer&.name || "N/A" %></p>
<p><strong>Participants:</strong> <%= @expense.participants.map(&:name).join(", ") %></p>

<div class="actions mt-3">
  <%= link_to "Edit", edit_trip_expense_path(@trip, @expense), class: "btn btn-warning" %>
  <%= link_to "Delete", trip_expense_path(@trip, @expense), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  <%= link_to "Back to Expenses", trip_expenses_path(@trip), class: "btn btn-secondary" %>
</div>
