<p style="color: green"><%= notice %></p>

<h1>Payment Details</h1>

<div class="payment-details">
  <div class="detail-row">
    <strong>Amount:</strong>
    <%= number_to_currency(@payment.amount, unit: @payment.currency) %>
  </div>

  <div class="detail-row">
    <strong>Description:</strong>
    <%= @payment.description %>
  </div>

  <div class="detail-row">
    <strong>Date:</strong>
    <%= @payment.date %>
  </div>

  <div class="detail-row">
    <strong>From:</strong>
    <%= @payment.user.name %>
  </div>

  <div class="detail-row">
    <strong>To:</strong>
    <%= @payment.recipient.name %>
  </div>
</div>

<div class="actions mt-4">
  <%= link_to "Edit", edit_trip_payment_path(@trip, @payment), class: "btn btn-primary" %>
  <%= link_to "Back to Payments", trip_payments_path(@trip), class: "btn btn-secondary" %>
  <%= button_to "Delete Payment", trip_payment_path(@trip, @payment), method: :delete, 
      data: { confirm: "Are you sure you want to delete this payment?" },
      class: "btn btn-danger" %>
</div>